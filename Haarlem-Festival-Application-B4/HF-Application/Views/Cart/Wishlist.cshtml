@model HF_Application.Models.ViewModel.CartModel
@{
    /**/

    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.AllOrderitems != null)
{


    <div class="col-md-8 offset-md-2 col-12 welcomediv">
        <h1 class="text-center">Your Wishlist!</h1>


        <div class="text-center">
            <h4>Orders that you have saved</h4>


        </div>

    </div>



    <div class="panel panel-default">
        <table id="cartTable" class="table" style="color:black">
            <thead>
                <tr>
                    <th>Quantity</th>
                    <th>Item</th>
                    <th>Comment</th>
                    <th class="text-right">Price</th>
                    <th class="text-right">Subtotal</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.AllOrderitems)
                {

                    int totaalitem = (item.Aantal * item.Prijs);
                    int totaal = +totaalitem;
                    <tr>
                        <td class="text-center">@item.Aantal</td>
                        <td class="text-left">@item.Item.CartDescription</td>
                        <td>@item.Opmerking</td>

                        @item.Prijs.ToString() euro

                        <td class="text-right">
                            @((item.Aantal * item.Prijs).ToString()) euro
                        </td>

                    </tr>

                }
            </tbody>


        </table>

    </div>
    <div>
        @Html.ActionLink("Checkout and pay", "AfrekenenWishlist", new { cartModel = Model }, new { @class = "btn btn-info login" })
    </div>


}

else
{
    <div class="col-md-8 offset-md-2 col-12 welcomediv">
        <h1 class="text-center">Your Orders</h1>


        <div class="text-center">
            <h4>NO THING TO SHOW</h4>

            <a class="btn btn-info login" href="@Url.Action("Index","Home")">Go To The Home page</a>
        </div>

    </div>
}
}
