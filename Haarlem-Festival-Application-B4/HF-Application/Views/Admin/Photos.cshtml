@model List<string>
@{
    ViewBag.Title = "Manage Photos";
    int count = 1;
}
<div class="row">
    <div class="col-sm-6">
        <a class="btn admin-btn" href="">
            <h3>Add New Image</h3>
        </a>
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm">
            <div class="card">
                <img src="@Url.Content("~/Content/images/events/" + item)" class="card-img-top" alt="Image @Html.Encode(item)">
                <div class="card-body">
                    <div class="card-title">@Html.Encode(item)</div>
                    <a href="#" class="btn btn-danger">Delete image</a>
                </div>
            </div>
        </div>
        count++;

        //Zorgt voor een nettere verdeling bij kleinere schermen
        if (count % 3 == 0)
        {
            //Via html.raw omdat razor anders problemen geeft
            @Html.Raw("<div class=\"w-100 d-lg-block d-xl-none\"></div>")
        }

        //Hiermee wordt de lijst opgedeeld in rijen van vier.
        if (count % 5 == 0)
        {
            //Via html.raw omdat razor anders problemen geeft
            @Html.Raw("</div><div class=\"row\">")
            count = 1;
        }
    }
</div>