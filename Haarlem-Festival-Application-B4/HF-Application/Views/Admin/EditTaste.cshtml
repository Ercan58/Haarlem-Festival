@model HF_Application.Models.Events.Diner

@{
    ViewBag.Title = "Edit Taste Event";
}
@Html.Partial("_AdminMenu")

@Styles.RenderFormat("<link rel=\"stylesheet\" href=\"{0}\" async>", "~/Content/bootstrap-datetimepicker-build.min.css")

<h2>Edit event "@Html.DisplayFor(model => model.CartTitle)"</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(model => model.CartTitle)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.CartTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CartTitle, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(model => model.Restaurant.RestaurantName)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-xl-9">
            @Html.DropDownListFor(model => model.RestaurantId
                , new SelectList(ViewBag.Locations, "Id", "RestaurantName")
                , new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Restaurant, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xl-3">
            @Html.LabelFor(model => model.Seats)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-xl-9">
            @Html.EditorFor(model => model.Seats, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Seats, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xl-3">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-xl-9">
            @Html.EditorFor(model => model.StartDate, new
       {
           htmlAttributes = new
           {
               @class = "form-control"
                ,
               @id = "datetimepicker1"
                ,
               @Value = Model.StartDate
           }
       })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xl-3">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-xl-9">
            @Html.EditorFor(model => model.EndDate, new
       {
           htmlAttributes = new
           {
               @class = "form-control"
                ,
               @id = "datetimepicker2"
                ,
               @Value = Model.EndDate
           }
       })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(model => model.TicketPrice)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.TicketPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TicketPrice, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(model => model.ReducedPrice)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.ReducedPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReducedPrice, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(model => model.Restaurant.imagePath)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.Restaurant.imagePath, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Restaurant.imagePath, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3">
            @Html.LabelFor(model => model.CartDescription)
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.CartDescription, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CartDescription, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <input type="submit" value="Save Changes" class="btn admin-btn" />
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-6">
            @Html.ActionLink("Cancel and Return", "Hear", "", new { @class = "btn admin-btn" })
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/datetimepicker")

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker({
                sideBySide: true,
                format: 'DD/MM/YYYY HH:mm'
            });
            $('#datetimepicker2').datetimepicker({
                sideBySide: true,
                format: 'DD/MM/YYYY HH:mm'
            });
        });
    </script>
}
