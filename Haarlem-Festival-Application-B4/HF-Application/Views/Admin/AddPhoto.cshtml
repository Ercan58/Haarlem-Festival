
@{
    ViewBag.Title = "Add New Photo";
}

<h2>Add a New Photo</h2>
<br />

@using (Html.BeginForm("AddPhoto",
                        "Admin",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{
    <div class="form-group row">
        <div class="col-sm-3">
            <label for="file">Upload Image</label>
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-9">
            <input type="file" name="file" id="file" class="form-control-file" /><br><br>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <input type="submit" value="Upload Image" class="btn admin-btn" />
        </div>
        <div class="w-100 d-lg-block d-xl-none"></div>
        <div class="col-sm-6">
            @Html.ActionLink("Cancel and Return", "Photos", "", new { @class = "btn admin-btn" })
        </div>
    </div>

    <div class="row">
        <div class="alert col-sm-12">
            @ViewBag.Message
        </div>
    </div>
}