@model HF_Application.Models.ViewModel.JazzsModel

@{
    ViewBag.Title = "Jazz at Patronaat";
}

<body class="JazzBody">
    <div class="container">

        <div class="col-md-8 offset-md-2 col-12 welcomediv">
            <h1 class="text-center">Jazz at Patronaat!</h1>
        </div>

        <div class="row restaurantnavigation">
            <div class="col-sm-12 align-content-sm-center text-center">

                @Html.ActionLink("All", "Index", new { date = "" }, new { @class = "jazzBtn btn btn-info" })
                @Html.ActionLink("26-07-2018", "Index", new { date = "2018-07-26" }, new { @class = "jazzBtn btn btn-info" })
                @Html.ActionLink("27-07-2018", "Index", new { date = "2018-07-27" }, new { @class = "jazzBtn btn btn-info" })
                @Html.ActionLink("28-07-2018", "Index", new { date = "2018-07-28" }, new { @class = "jazzBtn btn btn-info" })
                @Html.ActionLink("29-07-2018", "Index", new { date = "2018-07-29" }, new { @class = "jazzBtn btn btn-info" })

            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            @foreach (var jazzEvent in Model.AllJazzEvents)
            {
                <div class="col-sm-3">
                    <div class="jazzDiv">

                        <div class="col-md-12">
                            <img class="jazzImage" src="@Url.Content("~/Content/images/events/"+jazzEvent.imagePath)" alt="Image of @jazzEvent.Band" />
                        </div>

                        <div class="col-md-12 text-center"><h1 class="jazzName">@jazzEvent.Band</h1></div>

                        <div class="row">
                            <div class="col-sm-6 text-center">
                                <div>
                                    <h2>Date</h2>
                                </div>
                                @jazzEvent.StartDate.ToShortDateString()
                            </div>

                            <div class="col-sm-6 text-center">
                                <div>
                                    <h2>Time</h2>
                                </div>
                                @jazzEvent.StartDate.ToShortTimeString() - @jazzEvent.EndDate.ToShortTimeString()
                            </div>

                            <div class="col-md-12 col-12 text-center tastebuttoncol">

                                @Html.ActionLink("More information", "Details", new { id = jazzEvent.ID }, new { @class = "jazzBtn btn btn-info" })

                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>