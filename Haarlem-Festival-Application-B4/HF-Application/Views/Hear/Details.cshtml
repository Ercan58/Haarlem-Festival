@model HF_Application.Models.JazzDetail


@{
    ViewBag.Title = "Talk1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="JazzBody">
    <div class="container jazzDetailDiv">
        <div class="col-md-10 detailTitelText">
            <h1 class="text-center detailTitelText"> @Model.JazzEvent.Band.ToString() </h1>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="co-md-8">
                    <img class="jazzDetailImage" src="@Url.Content("~/Content/images/events/" + @Model.JazzEvent.imagePath)" alt="Image of @Model.JazzEvent.Band.ToString()" />
                </div>
                <div class="text-left titelText">
                    @Model.JazzEvent.Band.ToString() at Patronaat

                    <div class="text-left lblText" style="margin-left:2%;">
                        Date: <p class="lblBodyText">@Model.JazzEvent.StartDate.ToShortDateString()</p>
                        Time: <p class="lblBodyText">@Model.JazzEvent.StartDate.ToShortTimeString() - @Model.JazzEvent.EndDate.ToShortTimeString()</p>
                        Location: <p class="lblBodyText">@Model.JazzEvent.Location.Address.ToString()</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form_reservering">
                    <div class="form-group">
                        <h3 class="lblTocketPrice">Ticket price: @string.Format("{0,00:C}", @Model.JazzEvent.TicketPrice.ToString()) euro</h3>
                        <div class="col-sm-auto">

                            Amount: <select>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>

                        </div>

                        <div class="col-sm-4">
                            Total: @ToString();
                        </div>

                        <div class="custom-controls-stacked">
                        </div>

                        <div class="text-center">
                            <a>@Html.ActionLink("Buy", "Details", 0, new { @class = "btn btn-info" })</a>
                            <a>@Html.ActionLink("Add to WishList", "Details", 0, new { @class = "btn btn-info" })</a>
                        </div>
                    </div>

                </div>

            </div>


            <div class="col-md-12 cross-talk">
                <div class="text-center">
                    <h3> Take a look at other events!</h3>


                    @foreach (var resto in Model.CrossSellingRestaurauntList)
                    {
                            
                    <div class="col-md-4 crossSeelItem">
                        <div class="crossSellName">
                            @resto.RestaurantName.ToString()
                        </div>
                        <img class="crossSellImage" src="@Url.Content("~/Content/images/events/" + resto.imagePath)" alt="Image of @resto.RestaurantName.ToString()" />

                        <div class="text-center" style="margin-bottom:5px;">
                            <a>@Html.ActionLink("More Information", "Details", "Taste", new { id = resto.Id }, new { @class = "btn btn-info login" })</a>
                        </div>

                    </div>
                    }


                </div>

            </div>

        </div>
    </div>


</body>
