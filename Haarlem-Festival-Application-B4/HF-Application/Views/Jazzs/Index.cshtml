@model HF_Application.Models.ViewModel.JazzsModel

@{
    ViewBag.Title = "Jazz at Patronaat";
}

<body id="Jazz">

    <div class="container">
        <div class="row restaurantnavigation">
            <div class="col-md-12 col-12 text-center">

                @foreach (var jazz in Model.AllJazzEvents)
            {
                    @Html.ActionLink(jazz.StartDate.ToString(), "index", new { date = jazz.StartDate }, new { @class = "DinerNavigationButton" })
                }
            </div>
        </div>
    </div>

    <div class="container">
        @foreach (var jazzEvent in Model.AllJazzEvents)
        {

            <div class="row restaurantdiv">
                <div class="col-md-12 text-center"><h1 class="RestaurantName">@jazzEvent.Band</h1></div>
                <div class="col-md-3">
                    <img class="jazzImage" src="@Url.Content("~/Content/images/"+jazzEvent.imagePath)" alt="Image of @jazzEvent.Band" />
                </div>
                <div class="col-md-6 col-12 text-center">
                    <strong>Date:</strong> @jazzEvent.StartDate<br />
                    <strong>Adress:</strong> @jazzEvent.Location.Address
                </div>
                <div class="col-md-3 col-12 text-center">
                    @using (Html.BeginForm())
                {
                        <input type="button" name="button" class="MoreInformationButton" value="Meer informatie" />
                    }
                </div>
            </div>
        }

    </div>

</body>

