@model HF_Application.Models.ViewModel.RestaurantModel

@{
    ViewBag.Title = "Diner";
}

<div class="container">
    <div class="row restaurantnavigation">
        <div class="col-md-12 col-12 text-center">
            @foreach (var foodtype in Model.ListOfSixFoodtypes)
            {
                @Html.ActionLink(foodtype.Naam, "index", new { id = foodtype.Id }, new { @class = "DinerNavigationButton" })
            }
           </div>
      </div>

    <div class="row restaurantnavigation">
        <div class="col-md-12 col-12 text-center">
            @foreach (var foodtype in Model.ListOfThreeFoodtypes)
            {
                @Html.ActionLink(foodtype.Naam, "index", new { id = foodtype.Id }, new { @class = "DinerNavigationButton" })
            }
        </div>
    </div>
</div>

<div class="container">
    @foreach(var restaurant in Model.Restaurants)
    {
        <div class="row restaurantdiv">
            <div class="col-md-12 text-center"><h1 class="RestaurantName">@restaurant.RestaurantName</h1></div>
            <div class="col-md-3">
                <img class="restaurantImage" src="@Url.Content("~/Content/images/"+restaurant.imagePath)" alt="IMAGES" />
            </div>
            <div class="col-md-6"></div>
            <div class="col-md-3"></div>
        </div>
    }

</div>
