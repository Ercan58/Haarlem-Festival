@model HF_Application.Models.ViewModel.RestaurantModel

@{
    ViewBag.Title = "Diner";
}
<body id="Diner">
    <div class="container">
        <div class="col-md-8 offset-md-2 col-12 welcomediv">
            <h1 class="text-center">Taste Haarlem!</h1>
            <p class="welcometext">
                Reservation is mandatory.  A reservation fee of €10,- per person wil be charged when a reservation is made on the Haarlem Festival site. This fee will be deducted from the final check on visiting the restaurant.
            </p>
        </div>
        <div class="row restaurantnavigation">
            <div class="col-md-12 col-12 text-center">

                @foreach (var foodtype in Model.ListOfSixFoodtypes)
                {
                    @Html.ActionLink(foodtype.Naam, "index", new { id = foodtype.Id }, new { @class = "DinerNavigationButton" })
                }
            </div>
        </div>

        <div class="row restaurantnavigation">
            <div class="col-md-12 col-12 text-center">
                @foreach (var foodtype in Model.ListOfThreeFoodtypes)
                {
                    @Html.ActionLink(foodtype.Naam, "index", new { id = foodtype.Id }, new { @class = "DinerNavigationButton" })
                }
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            @foreach (var restaurant in Model.Restaurants)
            {

                <div class="col-lg-4 col-md-4 col-sm-6 col-xl-3">
                    <div class="restaurantdiv">
                        <div class="col-md-12 text-center"><h1 class="RestaurantName">@restaurant.RestaurantName</h1></div>
                        <div class="col-md-12">
                            <img class="restaurantImage" src="@Url.Content("~/Content/images/"+restaurant.imagePath)" alt="IMAGES" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <ul>
                                    @foreach (var foodtypes in restaurant.FoodTypes)
                                    {
                                        IHtmlString tekst = new HtmlString("<li class='foodtypesretaurant'>" + foodtypes.Foodtype.Naam + "</li>");
                                        @Html.Raw(tekst)
                                    }
                                </ul>
                            </div>
                            <div class="col-md-6">
                                Adres: @restaurant.Location.Address
                            </div>
                            <div class="col-md-12 col-12 text-center">
                                @using (Html.BeginForm())
                                {
                                    <input type="button" name="button" class="MoreInformationButton" value="Meer informatie" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>