@model HF_Application.Models.ViewModel.TalksModel

@{
    ViewBag.Title = "Talking Haarlem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="Talk">


    <div class="col-md-8 offset-md-2 col-12 welcomediv">
        <h1 class="text-center">Talking Haarlem!</h1>
    </div>

    <div class="container-fluid">

        <div class="row">

           

                @foreach (var talkEvent in Model.AllTalkEvents)
                { <div class="col-md-4">
                <div class="Talkdiv">

                    <div class="text-center"><h5 class="interviewName">@talkEvent.Interview</h5></div>

                    <div>
                        <img class="talkImage1" src="@Url.Content("~/Content/images/" + talkEvent.ImagePath)" alt="Image of @talkEvent.Interview" />
                    </div>
                    <div class="text-center">
                        <strong>Date: @talkEvent.StartDate</strong><br />
                        <strong class="text-center">Adres: @talkEvent.Location.Address </strong>

                        <p class="MoreInformationButton">@Html.ActionLink("More Information", "Talk1", new { id = talkEvent.ID })</p>

                        @*<p class="Para" > @talkEvent.ReservationInfo </p>*@
              
                     
             

                        @*@using (Html.BeginForm())
                        {
                            <input type="button" name="button" class="MoreInformationButton" value="More Information" />
                          
                        }*@


                    </div>
                </div>
            </div>
                }
                   
            </div>
        </div>

    </body>