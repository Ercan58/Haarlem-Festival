@model HF_Application.Models.ViewModel.TalksModel

@{
    ViewBag.Title = "Talking Haarlem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="Talk">


    <div class="col-md-8 offset-md-2 col-12 welcomediv">
        <h1 class="text-center">Talking Haarlem!</h1>
    </div>

    <div class="container-fluid">
        <div class="row">
            @foreach (var talkEvent in Model.AllTalkEvents)
            {
                <div class="col-lg-3 col-md-3 col-sm-4 col-xl-4" >
                    <div class="Talkdiv">
                        <div class="text-center"><h5 class="interviewName">@talkEvent.Interview</h5></div>
                        <div class="col-md-12">
                            <img class="talkImage" src="@Url.Content("~/Content/images/"+talkEvent.ImagePath)" alt="Image of @talkEvent.Interview" />
                        </div>
                        <div class="text-center">
                            <strong> @talkEvent.StartDate</strong><br />
                            <p class="text-center"> <Strong> Adres: </Strong> @talkEvent.Location.Address </p>

                            <p class="text-center" > @talkEvent.ReservationInfo </p>
                        </div>
                        <div class="col-md-12 col-12 text-center">
                            @using (Html.BeginForm())
                {
                                <input type="button" name="button" class="TalkButton" value="Make Reservation" />
                                <input type="button" name="button" class="TalkButton" value="Add To WishList" />
                                <input type="button" name="button" class="TalkButton" value="Ask Question" />
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>